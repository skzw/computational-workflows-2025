FROM debian:bullseye-slim

LABEL image.author.name="yourname"
LABEL image.author.email="yourmail"

# Install dependencies
RUN apt-get update && \
    apt-get install -y curl tar && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Download and install Salmon
RUN curl -L https://github.com/COMBINE-lab/salmon/releases/download/v1.5.2/salmon-1.5.2_linux_x86_64.tar.gz \
    | tar -xz -C /opt

# Set the PATH environment variable (to /usr/bin)
ENV PATH="/opt/salmon-1.5.2_linux_x86_64/bin:${PATH}"
